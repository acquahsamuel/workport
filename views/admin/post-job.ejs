            <!-- Left Sidebar - style you can find in sidebar.scss  -->
            <!-- ============================================================== -->
            <aside
                class="left-sidebar" data-sidebarbg="skin5">
                <!-- Sidebar scroll-->
                <div
                    class="scroll-sidebar">
                    <!-- Sidebar navigation-->
                    <%- include('layouts/sidebar') -%>
                    <!-- End Sidebar navigation -->
                </div>
                <!-- End Sidebar scroll-->
            </aside>

            <!-- Page wrapper  -->
            <!-- ============================================================== -->
            <div class="page-wrapper">
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                    <div class="page-breadcrumb"> <div class="row">
                        <div class="col-5 align-self-center">
                            <h4 class="page-title">
                                Post Jobs
                            </h4>
                        </div>
                        <div class="col-7 align-self-center">
                            <div class="d-flex align-items-center justify-content-end">
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item">
                                            <a href="#">Home</a>
                                        </li>
                                        <!-- <li class="breadcrumb-item active" aria-current="page">Basic Table</li> -->
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ============================================================== -->
                <!-- Container fluid  -->
                <!-- ============================================================== -->
                    <div class="container-fluid"> <div class="row">
                        <div class="col-12">
                            <div class="card card-body">

                                <form class="form-horizontal m-t-30">

                                    <div class="form-group">
                                        <label>
                                            Position
                                        </label>
                                        <input type="text" class="form-control" value="">
                                        <small>eg. Web Developer
                                        </small>
                                    </div>

                                    <div class="form-group">
                                        <label>
                                            Company name
                                        </label>
                                        <input type="email" id="email" name="email" class="form-control" placeholder="">
                                        <small>eg. Company.inc
                                        </small>
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            Location Allowed
                                        </label>
                                        <input type="email" id="email" name="email" class="form-control" placeholder="">
                                        <small>eg. Anywhere
                                        </small>
                                    </div>
                                    <div class="form-group">
                                        <label>
                                            Industry/ job tags
                                        </label>
                                        <input type="email" id="email" name="email" class="form-control" placeholder="">
                                        <small>
                                            eg. Node.js, Angular
                                        </small>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="inputCity">
                                                Minimum salary
                                            </label>
                                            <input type="text" class="form-control" id="inputCity">
                                            <small>
                                                eg. 1,000
                                            </small>
                                        </div>

                                        <div class="form-group col-md-4">
                                            <label for="inputZip">
                                                Maximum salary
                                            </label>
                                            <input type="text" class="form-control" id="inputZip">
                                            <small>
                                                eg. 5,000
                                            </small>
                                        </div>

                                        <div class="form-group col-md-4">
                                            <label for="inputState">
                                                Salary interval
                                            </label>
                                            <select id="inputState" class="form-control">
                                                <option>
                                                    Annual
                                                </option>
                                                <option>
                                                    Hourly
                                                </option>
                                            </select>

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label>
                                            Job description *
                                            <span class="text-danger">
                                                Uses markdown format - click the ? icon for a guide
                                            </span>
                                        </label>

                                         <!-- <textarea id="mytextarea">Hello, World!</textarea> -->
                                        <textarea class="form-control" name="jobDescription" id="mytextarea" rows="7"></textarea>
                        
                                    </div>

                                    <div class="alert alert-danger">
                                        One of the following is required. This is the email or link where we will send applicants.
                                    </div>
                                    <br>

                                    <div class="form-group">
                                        <label>
                                            Application URL
                                            <span class="text-danger"></span>
                                            *
                                        </label>
                                        <input type="text" id="" name="" class="form-control" placeholder="">
                                        <small>
                                            https://mycompany.com/application/job/1
                                        </small>
                                    </div>


                                    <div class="form-group">
                                        <label>
                                            Apply-to email
                                        </label>
                                        <input type="text" id="" name="" class="form-control" placeholder="">
                                        <small>
                                            eg. companyemail.gmail.com
                                        </small>
                                    </div>

                                    <br>
                                    <div class="alert alert-danger">
                                        Company details
                                    </div>
                                    <br>

                                    <div class="form-group">
                                        <label>
                                            Upload company logo
                                        </label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    Upload
                                                </span>
                                            </div>
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="inputGroupFile01">
                                                <label class="custom-file-label" for="inputGroupFile01">
                                                    Choose file
                                                </label>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="inputCity">
                                                Company Twitter
                                            </label>
                                            <input type="text" class="form-control" id="inputCity">
                                        </div>


                                        <div class="form-group col-md-4">
                                            <label for="inputZip">
                                                Company contact email
                                            </label>
                                            <input type="text" class="form-control" id="inputZip">
                                        </div>
                                    </div>

                                    <div class="form-row">
                                        <div class="form-group col-md-4">
                                            <label for="inputCity">
                                                PO # / invoice notes
                                            </label>
                                            <input type="text" class="form-control" id="inputCity">
                                        </div>

                                        <div class="form-group col-md-4">
                                            <label for="inputZip">
                                                Accounting email
                                            </label>
                                            <input type="text" class="form-control" id="inputZip">
                                        </div>
                                    </div>


                                </form>
                            </div>
                        </div>
                    </div>
                </div>


                <!-- ============================================================== -->
                <!-- footer -->
                <%- include('layouts/footer') -%>
